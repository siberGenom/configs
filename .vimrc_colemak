set nocompatible
filetype on
filetype plugin indent 
syntax on 
colorscheme zenburn
set encoding=utf-8
set number
set tabstop=4
set shiftwidth=4
set expandtab
set visualbell

" l - undo
" u - insert
" y - insert newline below
" Y - insert newline above
" j - yank
" jj - yank line

noremap f e
noremap g t
noremap j y
noremap k n
noremap l u
noremap p r
noremap r s
noremap s d
noremap t f
noremap u i
noremap y o
noremap D G
noremap E K
noremap F E
noremap G T
noremap I L
noremap J Y
noremap K N
noremap N J
noremap O P
noremap P R
noremap R S
noremap S D
noremap T F
noremap U I
noremap Y O

"navigation
noremap n h
noremap e j
noremap i k
noremap o l

"top + bottom
noremap dd gg
noremap D G

"copy + paste
noremap jj yy
noremap ; p

"pane nav
nnoremap <C-n> <C-w><C-h>
nnoremap <C-o> <C-w><C-l>

"insert newline staying in normal mode
nnoremap <Leader>o o<Esc>
nnoremap <Leader>O O<Esc>

